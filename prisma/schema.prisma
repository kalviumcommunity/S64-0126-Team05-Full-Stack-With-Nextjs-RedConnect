generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  latitude  Float?
  longitude Float?
  createdAt DateTime @default(now())
}

model Hospital {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())

  inventories       BloodInventory[]
  emergencyRequests EmergencyRequest[]
}

model BloodInventory {
  id         String   @id @default(uuid())
  bloodGroup String
  units      Int
  expiryDate DateTime
  hospital   Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId String
}

model EmergencyRequest {
  id         String   @id @default(uuid())
  bloodGroup String
  status     RequestStatus @default(PENDING)
  hospital   Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId String
  createdAt  DateTime @default(now())
}

enum Role {
  DONOR
  HOSPITAL
  ADMIN
}

enum RequestStatus {
  PENDING
  ACCEPTED
  CLOSED
}