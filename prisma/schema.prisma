generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  latitude  Float?
  longitude Float?
  createdAt DateTime @default(now())
}

model Hospital {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())

  inventories       BloodInventory[]
  emergencyRequests EmergencyRequest[]
}

model BloodInventory {
  id         String   @id @default(uuid())
  bloodGroup String
  units      Int
  expiryDate DateTime
  hospital   Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId String
}

model EmergencyRequest {
  id         String   @id @default(uuid())
  bloodGroup String
  status     RequestStatus @default(PENDING)
  hospital   Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId String
  createdAt  DateTime @default(now())
}

// Blood Donation Management Models
model Donor {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  phone       String
  bloodType   String
  dateOfBirth DateTime
  address     String
  city        String
  lastDonated DateTime?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  donations Donation[]
  
  @@index([bloodType])
  @@index([city])
  @@index([email])
}

model BloodBank {
  id        String   @id @default(uuid())
  name      String
  address   String
  city      String
  contactNo String
  email     String   @unique
  createdAt DateTime @default(now())
  
  inventories BloodBankInventory[]
  donations   Donation[]
  
  @@index([city])
  @@index([email])
}

model BloodBankInventory {
  id        String   @id @default(uuid())
  bloodType String
  units     Int      @default(0)
  minUnits  Int      @default(10)
  expiryDate DateTime?
  updatedAt DateTime @updatedAt
  
  bloodBankId String
  bloodBank   BloodBank @relation(fields: [bloodBankId], references: [id])
  
  @@unique([bloodBankId, bloodType])
  @@index([bloodType])
  @@index([bloodBankId])
}

model Donation {
  id          String   @id @default(uuid())
  units       Int      @default(1)
  status      String   @default("pending") // pending, completed, rejected
  notes       String?
  createdAt   DateTime @default(now())
  
  donorId   String
  donor     Donor    @relation(fields: [donorId], references: [id])
  
  bloodBankId String
  bloodBank   BloodBank @relation(fields: [bloodBankId], references: [id])
  
  @@index([donorId])
  @@index([bloodBankId])
  @@index([status])
  @@index([createdAt])
}

model FileUpload {
  id          String   @id @default(uuid())
  name        String
  url         String
  size        Int
  contentType String
  uploaderId  String?
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@index([uploaderId])
}

enum Role {
  DONOR
  HOSPITAL
  ADMIN
}

enum RequestStatus {
  PENDING
  ACCEPTED
  CLOSED
}
